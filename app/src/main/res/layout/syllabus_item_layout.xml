<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">


    <TextView
        android:id="@+id/syllabus_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Syllabus Item"/>

    <EditText
        android:id="@+id/syllabus_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/syllabus_item_title"
        tools:text="Score"
        android:digits="0123456789"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/syllabus_item_score_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:layout_alignRight="@id/syllabus_item_score"
        android:layout_above="@id/syllabus_item_score">
    </TextView>


</RelativeLayout>